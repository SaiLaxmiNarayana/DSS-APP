<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/empback2"
    tools:context=".LeaveRequestActivity">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"/>

    <androidx.cardview.widget.CardView
        android:layout_width="300dp"
        android:layout_height="580dp"
        android:layout_marginTop="0dp"
        app:cardCornerRadius="30dp"
        android:foreground="@drawable/custom_border"
        app:cardElevation="100dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="647dp"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/leaverequest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Leave Request"
                android:textAlignment="center"
                android:textColor="@color/black"
                android:textSize="36sp"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/ic_baseline_person_24"
                android:drawablePadding="8dp"
                android:hint="Name"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/id"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/empid1"
                android:drawablePadding="8dp"
                android:hint="ID"
                android:padding="8dp"
                android:textColor="@color/black" />

            <EditText
                android:id="@+id/from_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:drawableLeft="@drawable/date1"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="From Date"
                android:padding="8dp"
                android:textColor="@color/black" />
            <ImageView
                android:id="@+id/fromDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/to_date"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawableLeft="@drawable/date1"
                android:drawablePadding="8dp"
                android:hint="To Date"
                android:padding="8dp"
                android:textColor="@color/black" />

            <ImageView
                android:id="@+id/toDateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                />
            <EditText
                android:id="@+id/days"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Days"
                android:padding="8dp"
                android:textColor="@color/black" />


            <EditText
                android:id="@+id/reason"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/custom_edittext"
                android:drawablePadding="8dp"
                android:hint="Reason"
                android:padding="8dp"
                android:textColor="@color/black" />


            <Button
                android:id="@+id/submitButton"
                android:layout_width="200dp"
                android:layout_height="50dp"
                android:layout_marginTop="18dp"
                android:backgroundTint="@color/black"
                android:text="Submit"
                android:visibility="visible"
                android:textSize="18sp"
                android:layout_gravity="center"
                android:textColor="@color/white"
                app:cornerRadius="20dp" />

        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>