<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/drawer_layout"
    android:fitsSystemWindows="true"
    tools:openDrawer="start"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:id="@+id/toolbar"
            android:elevation="4dp"
            android:background="@color/lavender"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            android:popupTheme="@style/ThemeOverlay.AppCompat.Light"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/fragment_container">

        <LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@drawable/dssback2">

    <androidx.cardview.widget.CardView
        android:layout_width="363dp"
        android:layout_height="562dp"
        android:layout_marginTop="15dp"
        android:foreground="@drawable/custom_border"
        app:cardCornerRadius="30dp"
        app:cardElevation="120dp">

        <GridLayout
            android:layout_width="326dp"
            android:layout_height="449dp"
            android:layout_gravity="center"
            android:layout_margin="20dp"
            android:alignmentMode="alignMargins"
            android:columnCount="2"
            android:rowCount="3">

            <Button
                android:id="@+id/createid"
                android:layout_width="4dp"
                android:layout_height="17dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#FEAC18"
                android:drawableTop="@drawable/createid1"
                android:gravity="center"
                android:textColor="#000000"
                android:text="Create ID/Employee Details"
                android:textStyle="bold"
                android:textSize="20sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/employeedetails"
                android:layout_width="5dp"
                android:layout_height="11dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#FEAC18"
                android:drawableTop="@drawable/employeeid"
                android:gravity="center"
                android:text="Daily Activity Tracking"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="20sp"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/leaverequests"
                android:layout_width="5dp"
                android:layout_height="10dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#FEAC18"
                android:drawableTop="@drawable/leaverequest1"
                android:gravity="center"
                android:text="Leave Requests"
                android:textColor="#000000"
                android:textSize="20sp"
                android:textStyle="bold"
                app:cornerRadius="30dp" />

            <Button
                android:id="@+id/leavehistory"
                android:layout_width="5dp"
                android:layout_height="0dp"
                android:layout_rowWeight="1"
                android:layout_columnWeight="1"
                android:layout_margin="5dp"
                android:backgroundTint="#FEAC18"
                android:drawableTop="@drawable/leavehistory1"
                android:textColor="#000000"
                android:gravity="center"
                android:text="Leave History"
                android:textStyle="bold"
                android:textSize="20sp"
                app:cornerRadius="30dp" />
        </GridLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
        </FrameLayout>

    </LinearLayout>

    <com.google.android.material.navigation.NavigationView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:id="@+id/nav_view"
        android:layout_gravity="start"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        app:itemIconTint="@color/lavender"
        app:itemTextColor="@color/lavender"/>

</androidx.drawerlayout.widget.DrawerLayout>
